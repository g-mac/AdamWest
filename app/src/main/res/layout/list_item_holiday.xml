<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/route_list_item_selector"
              android:layout_width="match_parent"
              android:padding="@dimen/listview_padding"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/text_view_date"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/text_view_holiday_name"
                android:singleLine="true"
                style="@style/listview_large_text"
                android:layout_toStartOf="@id/text_view_date"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/text_view_holiday_description"
            android:lines="2"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/text_view_routes"
                android:layout_alignParentLeft="true"
                android:text="@string/ammount_of_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/text_view_route_counter"
                android:layout_toRightOf="@id/text_view_routes"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>