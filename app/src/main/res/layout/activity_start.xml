<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/start_activity_layout"
    tools:context="de.adamwest.StartActivity">

    <!--<TextView-->
        <!--android:text="@string/hello_world"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp">

        <Button android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:text="new holiday"
                android:background="@drawable/simple_button_selector"
                android:onClick="onNewHolidayClick"/>

        <Button android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:text="browse holidays"
                android:background="@drawable/simple_button_selector"
                android:onClick="onBrowseHolidaysClick"/>

        <Button android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:text="continue holiday"
                android:background="@drawable/simple_button_selector"
                android:onClick="onContinueHolidayClick"
                android:clickable="false"
                android:enabled="false"/>

    </LinearLayout>


</RelativeLayout>
